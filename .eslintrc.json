{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 13
    },
    "rules": {
        "indent": "off",
        "consistent-return": "off",
        "no-param-reassign": "off",
        "class-methods-use-this": "off",
        "import/order": "off",
        "func-names": "off",
        "no-restricted-syntax": "off",
        "comma-dangle": [
            "error",
            "always-multiline"
        ]
    },
    "overrides": [
        {
            "files": [
                "*test.js",
                "*setup.js"
            ],
            "rules": {
                "no-undef": "off",
                "no-await-in-loop": "off"
            }
        }
    ]
}